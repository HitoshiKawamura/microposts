<h1>Settings</h1>

  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :area %>
      <%= f.text_field :area, class: 'form-control' %>
      
      <%= f.label :profile %>
      <%= f.text_area :profile, class: 'form-control' %>
      
      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
      
    <% end %>
  </div>
  </div>